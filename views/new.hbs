   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
   
<h1>Word Frequency: {{datas}} </h1>
 

<form action="/new" id="searchForm">
  <input type="text" name="Word" placeholder="Word to count">
  <input type="text" name="Text" placeholder="Text">

  <input type="submit" value="Count" onClick="history.go(0)" VALUE="Refresh">
</form>
<div id="result"></div>
 
<script>
// Attach a submit handler to the form
$( "#searchForm" ).submit(function( event ) {
 
  // Stop form from submitting normally
  event.preventDefault();
 
  // Get some values from elements on the page:
  var $form = $( this ),
    term = $form.find( "input[name='Word']" ).val(),
    term2 = $form.find( "input[name='Text']" ).val(),

    url = $form.attr( "action" );
 
  // Send the data using post
  var posting = $.post( url, { Word: term, Text: term2  } );
 
  // Put the results in a div
  posting.done(function( data ) {
    var content = $( data ).find( "#content" );
    $( "#result" ).empty().append( content );
  });
});
</script>